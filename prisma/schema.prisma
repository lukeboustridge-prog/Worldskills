generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SA
  SCM
}

enum DeliverableState {
  NotStarted
  Draft
  InProgress
  Finalised
  Uploaded
  Validated
}

enum GateStatus {
  Open
  Complete
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String?
  role         Role     @default(SCM)
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())

  accounts    Account[]
  sessions    Session[]
  skillsAsSA  Skill[] @relation("SkillSA")
  skillsAsSCM Skill[] @relation("SkillSCM")
  messages    Message[]
  activity    ActivityLog[]
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  sector    String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  scmId String?
  saId  String

  scm User? @relation("SkillSCM", fields: [scmId], references: [id])
  sa  User  @relation("SkillSA", fields: [saId], references: [id])

  deliverables Deliverable[]
  gates        Gate[]
  messages     Message[]
  activity     ActivityLog[]

  @@index([scmId])
  @@index([saId])
  @@unique([name])
}

model DeliverableTemplate {
  id           String   @id @default(cuid())
  key          String   @unique
  label        String
  offsetMonths Int
  position     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  deliverables Deliverable[]
}

model Deliverable {
  id               String           @id @default(cuid())
  skillId          String
  key              String
  label            String
  cMonthOffset     Int
  dueDate          DateTime
  cMonthLabel      String
  state            DeliverableState @default(NotStarted)
  evidenceLinks    String[]         @default([])
  updatedBy        String?
  updatedAt        DateTime         @updatedAt
  createdAt        DateTime         @default(now())
  overdueNotifiedAt DateTime?

  skill     Skill               @relation(fields: [skillId], references: [id])
  template  DeliverableTemplate @relation(fields: [key], references: [key])

  @@index([skillId])
  @@unique([skillId, key])
}

model Gate {
  id           String     @id @default(cuid())
  skillId      String
  name         String
  dueDate      DateTime
  status       GateStatus @default(Open)
  completedBy  String?
  completedAt  DateTime?

  skill Skill @relation(fields: [skillId], references: [id])

  @@index([skillId])
}

model Message {
  id        String   @id @default(cuid())
  skillId   String
  authorId  String
  body      String   @db.Text
  createdAt DateTime @default(now())

  skill  Skill @relation(fields: [skillId], references: [id])
  author User  @relation(fields: [authorId], references: [id])

  @@index([skillId])
  @@index([authorId])
}

model ActivityLog {
  id        String   @id @default(cuid())
  skillId   String
  userId    String
  action    String
  payload   Json
  createdAt DateTime @default(now())

  skill Skill @relation(fields: [skillId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@index([skillId])
  @@index([userId])
}

model AppSettings {
  id                Int      @id @default(1)
  competitionName   String
  competitionStart  DateTime
  competitionEnd    DateTime
  keyDates          Json     @default("{}")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
