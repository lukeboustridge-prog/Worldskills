generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Pending
  SA
  SCM
  SkillTeam
  Secretariat
}

enum DeliverableState {
  NotStarted
  Draft
  InProgress
  Finalised
  Uploaded
  Validated
}

enum DeliverableScheduleType {
  Calendar
  CMonth
}

enum GateStatus {
  Open
  Complete
}

enum ResourceCategory {
  GUIDANCE
  TEMPLATE
  BEST_PRACTICE
  ONBOARDING
  POLICY
  EXTERNAL
}

enum QualityIndicator {
  EXCELLENT // Exemplary descriptor, showcase quality
  GOOD // Solid descriptor, ready for use
  REFERENCE // Use as reference, may need refinement
  NEEDS_REVIEW // Imported, requires admin review
}

enum EmailType {
  SKILL_BROADCAST // SA broadcast to their skills
  INTERNAL // SA/Secretariat internal communication
}

enum GateScheduleType {
  Calendar
  CMonth
}

enum DescriptorBatchStatus {
  DRAFT // SCM creating, not yet submitted
  PENDING_REVIEW // Submitted to SA, awaiting approval
  APPROVED // SA approved (qualityIndicator set to GOOD)
  RETURNED // SA returned with comments, SCM can revise
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String?
  role         Role     @default(Pending)
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())

  accounts             Account[]
  sessions             Session[]
  skillsAsSA           Skill[]               @relation("SkillSA")
  skillsAsSCM          Skill[]               @relation("SkillSCM")
  skillMemberships     SkillMember[]
  messages             Message[]
  activity             ActivityLog[]
  invitationsCreated   Invitation[]          @relation("InvitationCreator")
  passwordResetTokens  PasswordResetToken[]
  meetingAttendees     MeetingAttendee[]
  favoriteDescriptors  DescriptorFavorite[]
  scmQuestionsCreated  SCMQuestion[]         @relation("SCMQuestionCreator")
  scmQuestionResponses SCMQuestionResponse[] @relation("SCMQuestionResponses")
  emailsSent           Email[]               @relation("EmailSender")
  emailsReceived       EmailRecipient[]      @relation("EmailRecipients")
  deliverableComments  DeliverableComment[]  @relation("DeliverableComments")
  createdWSOSSections  WSOSSection[]         @relation("WSOSSectionCreator")
  descriptorsCreated   Descriptor[]          @relation("DescriptorCreator")
  descriptorsReviewed  Descriptor[]          @relation("DescriptorReviewer")
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  sector    String?
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  scmId String?
  saId  String

  scm User? @relation("SkillSCM", fields: [scmId], references: [id])
  sa  User  @relation("SkillSA", fields: [saId], references: [id])

  deliverables        Deliverable[]
  gates               Gate[]
  messages            Message[]
  activity            ActivityLog[]
  meetings            Meeting[]
  teamMembers         SkillMember[]
  emails              EmailSkill[]
  deliverableComments DeliverableComment[]

  @@unique([name])
  @@index([scmId])
  @@index([saId])
}

model SkillMember {
  id        String   @id @default(cuid())
  skillId   String
  userId    String
  createdAt DateTime @default(now())

  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([skillId, userId])
  @@index([skillId])
  @@index([userId])
}

model DeliverableTemplate {
  id              String                  @id @default(cuid())
  key             String                  @unique
  label           String
  description     String?
  offsetMonths    Int?
  calendarDueDate DateTime?
  scheduleType    DeliverableScheduleType @default(CMonth)
  position        Int                     @default(0)
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  deliverables Deliverable[]
}

model Deliverable {
  id                String                  @id @default(cuid())
  skillId           String
  key               String
  templateKey       String?
  label             String
  description       String?
  cMonthOffset      Int?
  dueDate           DateTime
  cMonthLabel       String?
  scheduleType      DeliverableScheduleType @default(CMonth)
  state             DeliverableState        @default(NotStarted)
  evidenceItems     Json                    @default("[]")
  updatedBy         String?
  updatedAt         DateTime                @updatedAt
  createdAt         DateTime                @default(now())
  overdueNotifiedAt DateTime?
  isHidden          Boolean                 @default(false)

  skill    Skill                @relation(fields: [skillId], references: [id])
  template DeliverableTemplate? @relation(fields: [templateKey], references: [key])
  comments DeliverableComment[]

  @@unique([skillId, key])
  @@index([skillId])
}

model GateTemplate {
  id              String           @id @default(cuid())
  key             String           @unique
  name            String
  offsetMonths    Int?
  calendarDueDate DateTime?
  scheduleType    GateScheduleType @default(CMonth)
  position        Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  gates Gate[]
}

model Gate {
  id           String           @id @default(cuid())
  skillId      String
  name         String
  dueDate      DateTime
  status       GateStatus       @default(Open)
  completedBy  String?
  completedAt  DateTime?
  templateKey  String?
  scheduleType GateScheduleType @default(Calendar)
  cMonthOffset Int?
  cMonthLabel  String?

  skill    Skill         @relation(fields: [skillId], references: [id])
  template GateTemplate? @relation(fields: [templateKey], references: [key])

  @@index([skillId])
}

model Message {
  id        String   @id @default(cuid())
  skillId   String
  authorId  String
  body      String   @db.Text
  createdAt DateTime @default(now())

  skill       Skill               @relation(fields: [skillId], references: [id])
  author      User                @relation(fields: [authorId], references: [id])
  attachments MessageAttachment[]

  @@index([skillId])
  @@index([authorId])
}

model MessageAttachment {
  id         String   @id @default(cuid())
  messageId  String
  storageKey String
  fileName   String
  fileSize   Int
  mimeType   String
  createdAt  DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

model ActivityLog {
  id        String   @id @default(cuid())
  skillId   String
  userId    String
  action    String
  payload   Json
  createdAt DateTime @default(now())

  skill Skill @relation(fields: [skillId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@index([skillId])
  @@index([userId])
}

model Meeting {
  id           String   @id @default(cuid())
  skillId      String?
  title        String
  startTime    DateTime
  endTime      DateTime
  meetingLink  String?
  minutes      String?  @db.Text
  actionPoints String?  @db.Text
  documents    Json     @default("[]")
  links        Json     @default("[]")
  createdAt    DateTime @default(now())

  skill     Skill?            @relation(fields: [skillId], references: [id])
  attendees MeetingAttendee[]
  guests    MeetingGuest[]

  @@index([skillId])
  @@index([startTime])
}

model MeetingAttendee {
  meetingId String
  userId    String
  addedAt   DateTime @default(now())
  addedBy   String?

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([meetingId, userId])
  @@index([meetingId])
  @@index([userId])
}

model MeetingGuest {
  id        String   @id @default(cuid())
  meetingId String
  name      String
  email     String
  addedAt   DateTime @default(now())
  addedBy   String?

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@index([meetingId])
}

model Invitation {
  id         String    @id @default(cuid())
  name       String
  email      String
  role       Role
  isAdmin    Boolean   @default(false)
  token      String    @unique
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  createdBy  String?
  acceptedAt DateTime?

  createdByUser User? @relation("InvitationCreator", fields: [createdBy], references: [id])

  @@index([email])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model AppSettings {
  id               Int      @id @default(1)
  competitionName  String
  competitionStart DateTime
  competitionEnd   DateTime
  keyDates         Json     @default("{}")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ResourceLink {
  id          String           @id @default(cuid())
  title       String
  description String?
  url         String           @db.Text
  category    ResourceCategory
  isFeatured  Boolean          @default(false)
  position    Int              @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([category])
  @@index([isFeatured])
}

model Descriptor {
  id            String @id @default(cuid())
  code          String // Criterion code from marking scheme (e.g., "A1", "B2.1")
  criterionName String // Name of the criterion/aspect

  // Performance level descriptions (0-3 scoring scale)
  score0 String? @db.Text // Below standard - 0 points
  score1 String? @db.Text // Acceptable - 1 point
  score2 String? @db.Text // Good - 2 points
  score3 String? @db.Text // Excellent - 3 points

  // Source metadata
  source     String // "WSC2024" for imported, "Manual" for admin-added
  skillNames String[] @default([]) // Skills this descriptor applies to
  sector     String? // Sector category if available

  // Categories and tags (for filtering)
  categories String[] @default([]) // Categories this descriptor belongs to
  tags       String[] @default([]) // JSONB array for flexible tagging

  // Schema versioning for future migrations
  version Int @default(1)

  // Quality control
  qualityIndicator QualityIndicator @default(NEEDS_REVIEW)

  // Soft delete
  deletedAt DateTime?
  deletedBy String?

  // Audit timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // User favorites
  favoritedBy DescriptorFavorite[]

  // WSOS Section linking (required for SCM-created descriptors)
  wsosSectionId String?
  wsosSection   WSOSSection? @relation(fields: [wsosSectionId], references: [id])

  // Batch workflow fields
  batchStatus   DescriptorBatchStatus? // null for admin/imported descriptors
  batchId       String? // Groups descriptors in same submission
  createdById   String? // SCM who created (null for imported)
  createdBy     User?                  @relation("DescriptorCreator", fields: [createdById], references: [id])
  submittedAt   DateTime? // When batch was submitted
  reviewerId    String? // SA who reviewed
  reviewer      User?                  @relation("DescriptorReviewer", fields: [reviewerId], references: [id])
  reviewedAt    DateTime? // When review completed
  reviewComment String?                @db.Text // SA's feedback if returned

  // B-tree indexes for common filters (GIN indexes for arrays added via raw SQL)
  @@index([source])
  @@index([sector])
  @@index([version])
  @@index([wsosSectionId])
  @@index([batchStatus])
  @@index([batchId])
  @@index([createdById])
}

model DescriptorFavorite {
  userId       String
  descriptorId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  descriptor Descriptor @relation(fields: [descriptorId], references: [id], onDelete: Cascade)

  @@id([userId, descriptorId])
  @@index([userId])
  @@index([descriptorId])
}

model SCMQuestion {
  id          String   @id @default(cuid())
  question    String   @db.Text
  description String?  @db.Text
  isActive    Boolean  @default(true)
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  createdBy   String
  updatedAt   DateTime @updatedAt

  creator   User                  @relation("SCMQuestionCreator", fields: [createdBy], references: [id])
  responses SCMQuestionResponse[]

  @@index([isActive])
}

model SCMQuestionResponse {
  id         String   @id @default(cuid())
  questionId String
  userId     String
  answer     String   @db.Text
  answeredAt DateTime @default(now())

  question SCMQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  user     User        @relation("SCMQuestionResponses", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([questionId, userId])
  @@index([questionId])
  @@index([userId])
}

model Email {
  id        String    @id @default(cuid())
  type      EmailType
  subject   String
  body      String    @db.Text
  senderId  String
  createdAt DateTime  @default(now())

  sender      User              @relation("EmailSender", fields: [senderId], references: [id])
  recipients  EmailRecipient[]
  attachments EmailAttachment[]
  skills      EmailSkill[]

  @@index([senderId])
  @@index([type])
  @@index([createdAt])
}

model EmailRecipient {
  id             String  @id @default(cuid())
  emailId        String
  userId         String?
  recipientEmail String
  recipientName  String?
  recipientRole  String?

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  user  User? @relation("EmailRecipients", fields: [userId], references: [id])

  @@index([emailId])
  @@index([userId])
}

model EmailAttachment {
  id         String   @id @default(cuid())
  emailId    String
  storageKey String
  fileName   String
  fileSize   Int
  mimeType   String
  createdAt  DateTime @default(now())

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)

  @@index([emailId])
}

model EmailSkill {
  id      String @id @default(cuid())
  emailId String
  skillId String

  email Email @relation(fields: [emailId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([emailId, skillId])
  @@index([emailId])
  @@index([skillId])
}

model DeliverableComment {
  id            String   @id @default(cuid())
  deliverableId String
  skillId       String
  userId        String
  body          String   @db.Text
  previousState String?
  newState      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  deliverable Deliverable @relation(fields: [deliverableId], references: [id], onDelete: Cascade)
  skill       Skill       @relation(fields: [skillId], references: [id], onDelete: Cascade)
  user        User        @relation("DeliverableComments", fields: [userId], references: [id], onDelete: Cascade)

  @@index([deliverableId])
  @@index([skillId])
  @@index([userId])
  @@index([createdAt])
}

model WSOSSection {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  createdAt   DateTime @default(now())
  createdBy   String
  updatedAt   DateTime @updatedAt

  creator     User         @relation("WSOSSectionCreator", fields: [createdBy], references: [id])
  descriptors Descriptor[]

  @@index([name])
}
