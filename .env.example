# Database connection string provided by Neon
DATABASE_URL="postgresql://username:password@host/db?sslmode=require"
HOST_EMAIL="luke.boustridge@gmail.com"
# Optional display name for the host Skill Advisor (defaults to Luke Boustridge)
HOST_NAME="Luke Boustridge"
# Optional initial password for the host account (used by prisma/seed)
HOST_INITIAL_PASSWORD="ChangeMe123!"

# NextAuth configuration
NEXTAUTH_SECRET="replace-with-strong-secret"
NEXTAUTH_URL="http://localhost:3000"

# Document evidence storage
FILE_STORAGE_BUCKET="your-bucket-name"
FILE_STORAGE_REGION="region-code"
FILE_STORAGE_ACCESS_KEY_ID="access-key-id"
FILE_STORAGE_SECRET_ACCESS_KEY="secret-access-key"
# Optional: override for non AWS endpoints
# FILE_STORAGE_ENDPOINT="https://s3-compatible-endpoint"
# Optional: set to true for S3 compatible services that require path-style URLs
# FILE_STORAGE_FORCE_PATH_STYLE=true
# Optional: signed download expiry in seconds (defaults to 120)
# FILE_DOWNLOAD_TTL_SECONDS=180

# Email configuration (Resend)
RESEND_API_KEY="re_your_api_key"
FROM_EMAIL="notifications@your-domain.com"

# Inbound email configuration (for reply tracking)
# Domain for receiving email replies (requires MX record pointing to Resend)
INBOUND_EMAIL_DOMAIN="replies.your-domain.com"
# Webhook secret for verifying Resend inbound email webhooks
RESEND_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Web Push Notifications (VAPID keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"
VAPID_SUBJECT="mailto:notifications@skill-tracker.worldskills2026.com"
