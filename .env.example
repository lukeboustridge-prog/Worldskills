# Database connection string provided by Neon
DATABASE_URL="postgresql://username:password@host/db?sslmode=require"

# NextAuth configuration
NEXTAUTH_SECRET="replace-with-strong-secret"
NEXTAUTH_URL="http://localhost:3000"

# Email provider for passwordless login
# Option 1: single SMTP connection URL
EMAIL_SERVER="smtp://user:password@smtp.example.com:587"

# Option 2: granular SMTP settings (used if EMAIL_SERVER is empty)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="user"
EMAIL_SERVER_PASSWORD="password"
EMAIL_SERVER_SECURE="false"

EMAIL_FROM="WorldSkills Tracker <no-reply@example.com>"
